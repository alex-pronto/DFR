@model RoleViewModel



<div class="container">
 <div class="row">

 <div class="col-md-offset-3 col-md-6">
 <form method="post" class="form-horizontal">
     <div class="validation" asp-validation-summary = "All"></div>
 <span class="heading">ДОБАВЛЕНИЕ РОЛИ</span>
 <div class="form-group"> 

 <input class="form-control" asp-for="Name" placeholder="Введите название"/>
 <span class="text-danger" asp-validation-for="Name"></span>
 <i class="fa fa-user"></i>
 </div>
 <div class="col-12">
 <button type="submit" asp-area="admin" asp-controller="roles" asp-action="add"  class="btn btn-default">Добавить</button></div>
 <div class="col-12">
 <a class="btn btn-default" asp-area="admin" asp-controller="roles" asp-action="index">Назад</a>
</div>

 </form>
 </div>



 </div><!-- /.row -->
</div><!-- /.container -->

