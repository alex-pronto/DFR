@model Registration



<div class="container">
 <div class="row">

 <div class="col-md-offset-3 col-md-6">
 <form method="post" class="form-horizontal">
     <div class="validation" asp-validation-summary = "All"></div>
 <span class="heading">ДОБАВЛЕНИЕ ПОЛЬЗОВАТЕЛЯ</span>
 <div class="form-group"> 
 <input asp-for="Name" class="form-control" placeholder="Введите Имя"/>
 <span class="text-danger" asp-validation-for="Name"></span>
 <i class="fa fa-user"></i>
 </div>
 <div class="form-group"> 
 <input asp-for="SurName" class="form-control" placeholder="Введите Фамилию"/>
 <span class="text-danger" asp-validation-for="SurName"></span>
 <i class="fa fa-user"></i>
 </div> 
 <div class="form-group">
 <input asp-for="Phone" class="form-control" placeholder="Укажите номер телефона"/>
 <span class="text-danger" asp-validation-for="Phone"></span>
 <i class="fa fa-phone"></i>
 <a href="#" class="fa fa-question-circle"></a>
 </div> 
 <div class="form-group">
 <input asp-for="EMail" class="form-control" placeholder="Укажите адрес почты"/>
 <span class="text-danger" asp-validation-for="EMail"></span>
 <i class="fa fa-at"></i>
 <a href="#" class="fa fa-question-circle"></a>
 </div> 
 <div class="form-group">
 </div>

 <div class="col-12">
 <button type="submit" asp-area="admin" asp-controller="users" asp-action="add"  class="btn btn-default">Сохранить</button></div>
 <div class="col-12">
 <a class="btn btn-default" asp-area="admin" asp-controller="users" asp-action="index">Назад</a>
</div>

 </form>
 </div>



 </div><!-- /.row -->
</div><!-- /.container -->

