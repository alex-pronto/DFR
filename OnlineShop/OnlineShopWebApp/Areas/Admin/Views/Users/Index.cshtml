@model List<UsersInRolesViewModel>
<h2><center>пользователи</center></h2>

@{
    ViewData["Title"] = "Admin Page - Users";
    ViewBag.Count = 1;
}



    <div class="container"> 
             <div class="row">

        <div class="col-2">
            @await Html.PartialAsync("AdminPanel")
        </div>
              <div class="col-8">
                  <div><td><a class="btn btn-default" asp-area="admin" asp-controller="users" asp-action="add" >Добавить пользователя</a></td></div>
            @foreach (var usersInRole in Model)
            {
                        <h4><center>пользователи в роли @usersInRole.Role.Name </center></h4>
                       <table class="table">
                        <thead>
                <tr>
                  <th scope="col">N°</th>
                  <th scope="col">E-mail(логин)</th>
                  <th scope="col">Имя</th>
                  <th scope="col">Фамилия</th>
                  <th scope="col">Телефон</th>
                </tr>
              </thead>
              <tbody>

                        @foreach (var user in usersInRole.Users)
                        {

                                                    <tr> 
                                                        <th scope="row">@(ViewBag.Count++)</th>
                                                        <td>@user.Email</td>
                                                        <td>@user.Name</td>
                                                            <td>@user.SurName</td>
                                                                <td>@user.Phone</td>
                                                                <td><a class="btn btn-default"  asp-area="admin" asp-controller="users" asp-action="info" asp-route-id="@user.Id" >Подробнее</a></td>
                                                                        <td><a class="btn btn-default" asp-area="admin" asp-controller="users" asp-action="delete" asp-route-id="@user.Id " >Удалить</a></td>

                                                    </tr>

                        } 
                                     </tbody>
                  </table>


            }
           



   </div>
        </div>
            </div>


