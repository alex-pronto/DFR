@model DanceFloorViewModel



<div class="container">
 <div class="row">

 <div class="col-md-offset-3 col-md-6">
 <form method="post" class="form-horizontal">
     <div class="validation" asp-validation-summary = "ModelOnly"></div>
 <span class="heading">РЕДАКТИРОВАНИЕ ТОВАРА</span>
 <div class="form-group"> 
 <input asp-for="Id" class="hidden"/>
 <input asp-for="Name" class="form-control" placeholder="Name"/>
 <span class="text-danger" asp-validation-for="Name"></span>
 <i class="fa fa-home"></i>
 </div> 
 <div class="form-group help">
 <input asp-for="Cost" asp-format="{0:0}" class="form-control" placeholder="Cost"/>
 <span class="text-danger" asp-validation-for="Cost"></span>
 <i class="fa fa-rub"></i>
 <a href="#" class="fa fa-question-circle"></a>
 </div> 
 <div class="form-group help">
 <input asp-for="Description" class="form-control" placeholder="Description"/>
 <span class="text-danger" asp-validation-for="Description"></span>
 <i class="fa fa-book"></i>
 <a href="#" class="fa fa-question-circle"></a>
 </div> 
 <div class="form-group">
 </div>
 
 <div class="col-12">
 <button type="submit" asp-area="admin" asp-controller="products" asp-action="edit"  class="btn btn-default">Сохранить</button></div>
 <div class="col-12">
 <a class="btn btn-default" asp-area="admin" asp-controller="products" asp-action="index">Назад</a>
</div>

 </form>
 </div>



 </div><!-- /.row -->
</div><!-- /.container -->

