@model UserDeliveryInfoViewModel


@{
    var userId = Guid.Empty;
}
<div class="container">
 <div class="row">

 <div class="col-md-offset-3 col-md-6">
 <form method="post" class="form-horizontal">
     <div class="validation" asp-validation-summary="ModelOnly"></div>

 <span class="heading">ОФОРМЛЕНИЕ ЗАКАЗА</span>
 
 @if (User.Identity.IsAuthenticated)
 {
         <div class="form-group"> 
                     <input type="hidden" name="userId" value="@ViewBag.CurrentUserId">
             <input asp-for="SurName" class="form-control" value="@ViewBag.CurrentUser.SurName"/>
     <span class="text-danger" asp-validation-for="SurName "></span>
 <i class="fa fa-user"></i>
 </div> 
 <div class="form-group help">
                 <input asp-for="Name" class="form-control" value="@ViewBag.CurrentUser.Name"/>
 <span class="text-danger" asp-validation-for="Name"></span>
 <i class="fa fa-user"></i>
 </div> 
 <div class="form-group help">
                 <input asp-for="Phone" class="form-control" value="@ViewBag.CurrentUser.Phone "/>
 <span class="text-danger" asp-validation-for="Phone"></span>
 <i class="fa fa-phone "></i>
 </div> 
 <div class="form-group help">
                 <input asp-for="EMail" class="form-control" value="@ViewBag.CurrentUser.Email "/>
 <span class="text-danger" asp-validation-for="EMail"></span>
 <i class="fa fa-at"></i>
     </div> 
 }
 else
 {
           <div class="form-group"> 
                            <input type="hidden" name="userId"  value="@ViewBag.CurrentUserId">
         <input asp-for="SurName" class="form-control" placeholder="Фамилия"/>
     <span class="text-danger" asp-validation-for="SurName"></span>
     <i class="fa fa-user"></i>
     </div> 
     <div class="form-group help">
     <input asp-for="Name" class="form-control" placeholder="Имя"/>
     <span class="text-danger" asp-validation-for="Name"></span>
     <i class="fa fa-user"></i>
     </div> 
     <div class="form-group help">
     <input asp-for="Phone" class="form-control" placeholder="Телефон"/>
     <span class="text-danger" asp-validation-for="Phone"></span>
     <i class="fa fa-phone "></i>
     </div> 
     <div class="form-group help">
     <input asp-for="EMail" class="form-control" placeholder="Электронная почта"/>
     <span class="text-danger" asp-validation-for="EMail"></span>
     <i class="fa fa-at"></i>
         </div> 
 }
 
 
 <div class="form-group">
 </div>
 <div class="col-12">
 <button type="submit" asp-controller="Order" asp-action="Buy" asp-route-userId = "@userId" class="btn btn-default">Перейти к оплате</button></div>
 <div class="col-12">

  </div>

 </form>
 </div>



 </div><!-- /.row -->
</div><!-- /.container -->
