@model Registration


<div class="container">
 <div class="row">

 <div class="col-md-offset-3 col-md-6">
 <form method="post" class="form-horizontal">
     <div class="validation" asp-validation-summary = "All"></div>
     <input type="hidden" name ="returnUrl" value = "@Model.ReturnUrl"/>
 <span class="heading">РЕГИСТРАЦИЯ</span>
 <div class="form-group">
 <input asp-for="EMail" class="form-control" placeholder="E-mail"/>
 <span class="text-danger" asp-validation-for="EMail"></span>
 <i class="fa fa-user"></i>
 </div> 
 <div class="form-group help">
 <input asp-for="Password" class="form-control" placeholder="Password"/>
 <span class="text-danger" asp-validation-for="Password"></span>
 <i class="fa fa-lock"></i>
 <a href="#" class="fa fa-question-circle"></a>
 </div> 
 <div class="form-group help">
 <input asp-for="ConfirmPassword" class="form-control" placeholder="ConfirmPassword"/>
 <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
 <i class="fa fa-lock"></i>
 <a href="#" class="fa fa-question-circle"></a>
 </div> 
 <div class="form-group">
 </div>
 <div class="col-12">
 <button type="submit" asp-controller="account" asp-action="registration"  class="btn btn-default">Регистрация</button></div>
  
 <div class="col-12">
  </div>
  </form>
 </div>

 

 </div><!-- /.row -->
</div><!-- /.container -->

