@model Login



<div class="container">
 <div class="row">

 <div class="col-md-offset-3 col-md-6">
 <form method="post" class="form-horizontal">
  <div class="validation" asp-validation-summary = "ModelOnly"></div>
 <input type="hidden" name ="returnUrl" value = "@Model.ReturnUrl"/>

 <span class="heading">ВХОД</span>
 <div class="form-group"> 
 <input asp-for="EMail" class="form-control" placeholder="E-mail"/>
 <span class="text-danger" asp-validation-for="EMail"></span>
 <i class="fa fa-user"></i>
 </div> 
 <div class="form-group help">
 <input asp-for="Password" class="form-control" placeholder="Password"/>
 <span class="text-danger" asp-validation-for="Password"></span>
 <i class="fa fa-lock"></i>
 <a href="#" class="fa fa-question-circle"></a>
 </div> 
 <div class="form-group">
 <div class="main-checkbox">
 <input  asp-for="RememberMe"  type="checkbox" value = "true" id="checkbox1" name="RememberMe"/>
 <label for="checkbox1"></label>
 </div>
 <span  class="text" >Запомнить</span>
 <div class="col-12">
 <button type="submit" asp-controller="account" asp-action="login"  class="btn btn-default">ВХОД</button></div>
 </form>  
  <div class="col-12">
 <a class="btn btn-default"  asp-route-returnUrl="@Model.ReturnUrl" asp-controller="account" asp-action="registration">Регистрация</a>

</div>
 </div>
 


 </div><!-- /.row -->
</div><!-- /.container -->

